{
  "name": "exapp",
  "description": "exapp it for life",
  "version": "1.0.0",
  "author": "itForLife",
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.53",
    "@zeit/next-css": "^0.2.0",
    "bootstrap": "^4.1.1",
    "classnames": "^2.2.6",
    "dotenv": "^6.0.0",
    "firebase": "^5.2.0",
    "firebase-admin": "^5.12.1",
    "firebase-functions": "^1.1.0",
    "firestorter": "^0.14.0",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "next": "^6.1.1",
    "next-fonts": "^0.10.0",
    "next-images": "^0.10.5",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@firebase/app-types": "^0.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "cpx": "^1.5.0",
    "prettier": "^1.12.0",
    "rimraf": "^2.6.2"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next src/app",
    "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
    "serve": "firebase serve",
    "predeploy": "yarn build-all",
    "deploy": "firebase deploy",
    "build-all": "yarn build-next && yarn build-functions && yarn build-public",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
    "build-next": "next build \"src/app\"",
    "build-functions": "babel \"src/functions\" --out-dir \"dist/functions\"",
    "prebuild-functions": "yarn copy-deps && yarn install-deps",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\"",
    "install-deps": "cd \"dist/functions\" && yarn install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itforlife/exapp"
  }
}
